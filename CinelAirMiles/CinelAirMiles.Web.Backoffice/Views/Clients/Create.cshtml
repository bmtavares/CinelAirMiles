@model CinelAirMiles.Common.Entities.Client

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FlownSegments" class="control-label"></label>
                <input asp-for="FlownSegments" class="form-control" />
                <span asp-validation-for="FlownSegments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MilesProgramNumber" class="control-label"></label>
                <input asp-for="MilesProgramNumber" class="form-control" />
                <span asp-validation-for="MilesProgramNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsInReferrerProgram" /> @Html.DisplayNameFor(model => model.IsInReferrerProgram)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MembershipDate" class="control-label"></label>
                <input asp-for="MembershipDate" class="form-control" />
                <span asp-validation-for="MembershipDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramTierId" class="control-label"></label>
                <select asp-for="ProgramTierId" class ="form-control" asp-items="ViewBag.ProgramTierId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
